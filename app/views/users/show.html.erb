<% provide(:title, @user.name) %>
<div class="row">
	<aside class="col-md-4">
		<section class="user_info">
			<h1>
			  <%= image_for(@user) %>
	      <%= @user.name %>
      </h1>
		</section>
		<section class="stats">
			<%= render 'shared/stats' %>
		</section>
	</aside>
	<div class="col-md-8">
	  <%= render 'follow_form' if logged_in? %>
	  <% if @user.notes.any? %>
		  <h3>Notes (<%= @user.notes.count %>)</h3>
		  <ol class="notes">
		  	<%= render @notes %>
		  </ol>
		  <%= will_paginate @notes %>
	  <% end %>
	</div>
</div>  