<% if logged_in? %>
  <div class="row">
    <aside class="col-md-4">
      <section class="user_info">
      	<%= render 'shared/user_info' %>
      </section>
      <section class="stats">
        <%= render 'shared/stats' %>
      </section>
      <section class="note_form">
      	<%= render 'shared/note_form' %>
      </section>
    </aside>
    <div class="col-md-8">
      <h3>Notes Feed</h3>
      <%= render 'shared/feed' %>
    </div>
  </div>
<% else %>
	<div class="center jumbotron">
		<h1>Welcome to the Greeting App</h1>
		<h2>
			This is the home page for the
			<a href="http://railstutorial.jp/">Ruby on Rails Tutorial</a>
			sample application.
		</h2>
		<%= link_to "Sign up now!", new_user_path, class: "btn btn-lg btn-primary" %>
	</div>
<% end %>

<script type="text/javascript">
  $('.reply').click(function() {
    var $comment_form = $(this).parents('li').find('.comment_form')
    if ($comment_form.hasClass('hidden')) {
      $comment_form.removeClass('hidden');
    } else {
      $comment_form.addClass('hidden');
    }
  });
</script>